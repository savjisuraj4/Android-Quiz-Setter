<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_welcome"
    tools:context=".AfterLogin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_welcome"
        android:gravity="center"
        android:isScrollContainer="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            app:cardCornerRadius="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="35dp"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/quizcodetextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quizcode_000000"
                android:fontFamily="@font/josefinsans_bold"
                android:ellipsize="middle"
                android:textSize="32sp"
                android:autoSizeMinTextSize="30dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="35sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="#4E4D4D"
                android:textStyle="bold|italic"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lets Set it"
                    android:fontFamily="@font/josefinsans_bold"
                    android:textSize="39sp"
                    android:textColor="#4E4D4D"
                    android:textStyle="bold|italic"
                    android:gravity="center"
                    android:layout_marginTop="35dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:paddingBottom="25dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="25dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start date:"
                        android:layout_gravity="start"
                        android:layout_marginStart="25dp"
                        android:fontFamily="@font/josefinsans_bold"
                        android:textSize="30sp"
                        android:textColor="#4E4D4D"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End date:"
                        android:layout_gravity="start"
                        android:layout_marginStart="25dp"
                        android:fontFamily="@font/josefinsans_bold"
                        android:textSize="30sp"
                        android:layout_marginTop="20dp"
                        android:textColor="#4E4D4D"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Time:"
                        android:layout_gravity="start"
                        android:layout_marginStart="25dp"
                        android:fontFamily="@font/josefinsans_bold"
                        android:textSize="30sp"
                        android:layout_marginTop="20dp"
                        android:textColor="#4E4D4D"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"

                    android:orientation="vertical"
                    android:paddingBottom="25dp">


                    <TextView
                        android:id="@+id/fromdatetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:autoSizeMaxTextSize="20dp"
                        android:drawablePadding="9dp"
                        android:gravity="center"
                        android:text="@string/set_the_date"
                        android:textColor="@color/red"
                        android:background="@drawable/datepickerbackground"
                        android:textSize="20sp"
                        app:drawableEndCompat="@drawable/ic_baseline_edit_calendar_24" />


                    <TextView
                        android:id="@+id/enddate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:autoSizeMaxTextSize="20dp"
                        android:drawablePadding="9dp"
                        android:gravity="center"
                        android:background="@drawable/datepickerbackground"
                        android:layout_marginTop="30dp"
                        android:text="@string/set_the_date"
                        android:textColor="@color/red"
                        android:textSize="20sp"
                        app:drawableEndCompat="@drawable/ic_baseline_edit_calendar_24" />

                    <TextView
                        android:id="@+id/quiztime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:autoSizeMaxTextSize="25dp"
                        android:drawablePadding="9dp"
                        android:gravity="center"

                        android:background="@drawable/datepickerbackground"
                        android:layout_marginTop="30dp"
                        android:text="@string/set"
                        android:textColor="@color/red"
                        android:textSize="22sp"
                        app:drawableEndCompat="@drawable/ic_baseline_timer_24" />


                </LinearLayout>

            </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/startsetquestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="49dp"
                    android:layout_marginEnd="51dp"
                    android:background="@drawable/shapebutton"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textAllCaps="false"
                    android:text="@string/start"
                    android:layout_marginBottom="25dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="31sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>